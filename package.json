{
    "name": "onomatopoeic-composer",
    "description": "Browsing, listening to, and composing with onomatopoeia",
    "version": "0.2.0",
    "licence": "AGPL",
    "homepage": "https://github.com/jasaarim/onomatopoeic-composer",
    "repository": {
        "type": "git",
        "url": "https://github.com/jasaarim/onomatopoeic-composer"
    },
    "scripts": {
        "dev": "npm run build; http-server build & tsc --build --watch",
        "test": "npx cypress run",
        "build": "rm build/ -rf; tsc --build; cp -L -r public/* build/",
        "index-sounds": "scripts/index-sounds.js",
        "copy-sounds": "scripts/copy-sounds.js",
        "decode-sound-files": "scripts/decode-sound-files.sh"
    },
    "devDependencies": {
        "cypress": "^10.10.0",
        "eslint-config-standard-with-typescript": "^34.0.1",
        "eslint-plugin-cypress": "^2.13.2",
        "http-server": "^14.1.1",
        "typescript": "^5.0.4"
    }
}
