{
  "compilerOptions": {
    "incremental": true,
    "isolatedModules": true,
    "target": "ES6",
    "module": "ES6",
    "declaration": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./build",
  },
  "include": ["./src"]
}
